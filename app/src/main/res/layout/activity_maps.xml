<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  xmlns:map="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/map"
                  tools:context=".MapsActivity"
                  android:name="com.google.android.gms.maps.SupportMapFragment"/>


        <LinearLayout android:layout_width="72dp"
                      android:layout_height="180dp"
                      android:layout_gravity="bottom|right"
                      android:orientation="vertical"
                      android:layoutDirection="ltr">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="110dp"
                          android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        app:backgroundTint="@android:color/darker_gray"
                        app:srcCompat="@drawable/ic_add_location_white_24dp"
                        android:id="@+id/add_plan_point"
                        android:visibility="visible"
                        android:clickable="false"/>

                <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:backgroundTint="@android:color/darker_gray"
                        app:srcCompat="@drawable/ic_keyboard_black_24dp"
                        android:id="@+id/add_plan_address"
                        android:visibility="visible"
                        android:clickable="false"/>
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@android:color/secondary_text_light"
                    app:srcCompat="@drawable/ic_add_white_24dp"
                    android:id="@+id/add_plan"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>